{
  "name": "crud-api",
  "version": "1.0.0",
  "description": "Simple CRUD API",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "start: dev": "cross-env NODE_ENV=development nodemon",
    "build": "webpack",
    "test": "jest"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "node --loader ts-node/esm src/index.ts",
    "delay": 2500
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexbulgakov/crud-api.git"
  },
  "keywords": [
    "nodejs"
  ],
  "author": "Aleksei Bulgakov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alexbulgakov/crud-api/issues"
  },
  "homepage": "https://github.com/alexbulgakov/crud-api#readme",
  "dependencies": {
    "@types/nodemon": "^1.19.6",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.3",
    "nodemon": "^3.0.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/uuid": "^9.0.8",
    "jest": "^29.7.0",
    "typescript": "^5.3.3",
    "webpack-cli": "^5.1.4"
  }
}
